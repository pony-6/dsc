				if (data.error == "0") {
				   alert(data.massege);
				} else if (data.error == "1") {
				   $(".nyroModal").attr("href", data.content);
				   $(".icon-picture").attr("onmouseover", "toolTip('<img src="+data.content+">')");
				}
