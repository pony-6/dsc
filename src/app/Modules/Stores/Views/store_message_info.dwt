	//ajax上传图片
	$("#stores_img").change(function(){
		var actionUrl = "index.php?act=upload_stores_img";
		$("#storeForm").ajaxSubmit({
			type: "POST",
			dataType: "json",
			url: actionUrl,
			data: { "action": "TemporaryImage" },
