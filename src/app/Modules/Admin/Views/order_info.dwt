                return
            }
            {if $express_list && $order.shipping_code eq 'express'}
                var express_code = $("#one_delivery_dialog").find('#express_code_0').val();
                if(express_code == ''){
                    pbDialog("请选择快递方式",'');
                    return
                }
                params = params + '&express_code=' + express_code
            {/if}

            $.jqueryAjax("order.php", params, function (data) {
                location.reload();
            }, 'POST');
        }

	  $(function(){
		$(document).on("click","#invoice_btn",function(){
			var val = $(this).prev().val();
			if (!val) {
				$(this).prev().addClass("error");
				alert('{$lang.invoice_no_sms}');
                return false;
			}

			// 是否为字母或数字
			var reg = /^[A-Za-z0-9]*$/;
			if (!reg.test(val)) {
			    $(this).prev().addClass("error");
			    alert('{$lang.invoice_no_notice}');
                return false;
			}

			$("#operate_form").submit();
		});

		$("*[ectype='orderDialog']").click(function(){
			var content = "",
				title = "",
				type = $(this).data("dialog");

			if(type == "userinfo"){
				content = $("#topbar").html();
				title = "{$lang.consignee_info}";
			}else{
				content = $("#vat").html();
				title = "{$lang.vat_info}";
			}

			pb({
				id:"userInfo",
				title:title,
				content:content,
				width:450,
				foot:false
			});

			$("#userInfo .topbar_info").perfectScrollbar();
		});
	  });

	  //部分发货 by wu
	  $(document).on('click', "input[name='part_ship']", function(){
		var rec_id = $(this).data('rec_id');
		$.post('order.php', 'act=part_ship&rec_id='+rec_id, function(data){
			pb({
				id:"part_ship_dialog",
				title:"{$lang.goods_delivery}",
				width:600,
				content:data.content,
				ok_title:"{$lang.op_confirm}",
				cl_title:"{$lang.cancel}",
				drag:false,
				foot:true,
				onOk:function(){
					$("form[name='part_ship']").submit();
				}
			});
		});
	  })
	  //发货
	  $(document).on('click', "input[name='part_to_delivery']", function(){
		var order_sn = $(this).data('order_sn');
		var goods_id = $(this).data('goods_id');
		location.href = 'order.php?act=delivery_list&order_sn='+order_sn+'&goods_id='+goods_id+'&status=2';
	  })

      //去退款
      $(document).on('click', "input[name='refound']", function(){
        var ret_id = $(this).data('ret_id');
        var rec_id = $(this).data('rec_id');
        location.href = "order.php?act=return_info&ret_id="+ret_id+"&rec_id="+rec_id;
      })

	  //超值礼包
	  $(".package_goods ul").perfectScrollbar("destroy");
	  $(".package_goods ul").perfectScrollbar();
	</script>

{include file ='library/pagefooter.lbi'}

</body>
