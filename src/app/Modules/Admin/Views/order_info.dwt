<!doctype html>
<html>
<head>{include file ='library/admin_html_head.lbi'}</head>
<style>
    .label_address .section dl dt, .label_address .section dl dd {
        height: auto;
        overflow: visible;
        white-space: normal;
        text-overflow: ellipsis;
    }
</style>
<body class="iframe_body">
	<div class="warpper">
    	<div class="title"><a href="order.php?act=list&uselastfilter=1" class="s-back">{$lang.back}</a>{$lang.order_word} - {$ur_here}</div>
        <div class="content">
            <div class="flexilist order_info">
                <div class="stepflex">
                	<dl class="first cur">
                    	<dt></dt>
                        <dd class="s-text">{$lang.submit_order}<br><em class="ftx-03">{$order.formated_add_time}</em></dd>
                    </dl>
                    <dl {if $order.pay_status eq '2'}class="cur"{/if}>
                    	<dt></dt>
                        <dd class="s-text">{$lang.payment_order}<br><em class="ftx-03">{$order.pay_time}</em></dd>
                    </dl>
                    <dl {if $order.shipping_status eq '1'||$order.shipping_status eq '2'}class="cur"{/if} >
                    	<dt></dt>
                        <dd class="s-text">{$lang.seller_shipping}<br><em class="ftx-03">{if $order.shipping_status eq '1'||$order.shipping_status eq '2'}{$order.shipping_time}{/if}</em></dd>
                    </dl>
                    <dl {if $order.shipping_status eq '2'}class="cur"{/if}>
                    	<dt></dt>
                        <dd class="s-text">{$lang.confirm_shipping}<br><em class="ftx-03">{if $order.shipping_status eq '2'}{$order.confirm_take_time}{/if}</em></dd>
                    </dl>
                    <dl class="last {if $order.is_commented}cur{/if}">
                    	<dt></dt>
                        <dd class="s-text">{$lang.evaluate}<br><em class="ftx-03"></em></dd>
                    </dl>
                </div>
                <form action="order.php?act=operate" method="post" name="theForm" onkeydown="if(event.keyCode==13)return false;" >
                    <div class="common-content">
                        <!--订单基本信息-->
                        <div class="step">
                            <div class="step_title"><i class="ui-step"></i><h3>{$lang.base_info}</h3></div>
                            <div class="section">
                                <dl>
                                    <dt>{$lang.label_order_sn}</dt>
                                    <dd>{$order.order_sn}{if $order.extension_code eq "group_buy"}<a href="group_buy.php?act=edit&id={$order.extension_id}">{$lang.group_buy}</a>{elseif $order.extension_code eq "exchange_goods"}<a href="exchange_goods.php?act=edit&id={$order.extension_id}">{$lang.exchange_goods}</a>{/if}</dd>
                                    <dt>{$lang.from_order}：</dt>
                                    <dd>{if $order.referer eq 'mobile' || $order.referer eq 'app'}APP{elseif $order.referer eq 'touch'}{$lang.touch}{elseif $order.referer eq 'H5'}H5{elseif $order.referer eq 'wxapp'}{$lang.wxapp}{elseif $order.referer eq 'ecjia-cashdesk'}{$lang.cashdesk}{else}PC{/if}</dd>
                                </dl>
                                <dl>
                                    <dt>{$lang.label_user_name} <div class="div_a">{if $order.user_id > 0}<a href="javascript:;" ectype="orderDialog" data-dialog="userinfo">{$lang.info}</a><i class="shu"></i><a href="user_msg.php?act=add&order_id={$order.order_id}&user_id={$order.user_id}">{$lang.leaving_message}</a>{/if}</div></dt>
                                    <dd>{$order.user_name|default:$lang.anonymous}</dd>
                                    <dt>{$lang.label_order_status}</dt>
                                    <dd>{$order.status}</dd>
                                </dl>
                                <dl>
                                    <dt>{$lang.label_payment}{if $order.order_amount neq 0}{if !$order.child_order}<a href="order.php?act=edit&order_id={$order.order_id}&step=payment"><i class="icon icon-edit"></i></a>{/if}{/if}</dt>
                                    <dd>{if $order.pay_id > 0}{$order.pay_name}{else}{$lang.wu}{/if}</dd>
                                    <dt>{$lang.label_shipping}
                                    {if !$order.child_order && $order.invoice_no eq ''}<a href="order.php?act=edit&order_id={$order.order_id}&step=shipping"><i class="icon icon-edit"></i></a>{/if}
                                    </dt>
                                    <dd>
                                        {if $exist_real_goods}
                                            {if $order.shipping_id > 0}<font id="shipping_name">{$order.shipping_name}</font>
                                                <input type="hidden" id="express_code" value="{$order.express_code}">
                                                <input type="hidden" id="shipping_code_name" value="{$order.shipping_code_name}">
                                                <input type="hidden" id="order_id" value="{$order.order_id}">
                                            {/if}
                                            {if $order.order_child eq 0}
                                                <a href="order.php?act=info&order_id={$order.order_id}&shipping_print=1" target="_blank">{$lang.print_shipping}</a>
                                            {/if}
                                            {if $order.insure_fee > 0}
                                                <span>（{$lang.label_insure_fee}{$order.formated_insure_fee}）</span>
                                            {/if}
                                        {/if}
                                    </dd>
                                </dl>
                                <dl>
                                    <dt>{$lang.label_order_time}</dt>
                                    <dd>{$order.formated_add_time}</dd>
                                    <dt>{$lang.label_pay_time}</dt>
                                    <dd>{$order.pay_time}</dd>
                                </dl>
                                <dl>
                                    <dt>{$lang.label_shipping_time}</dt>
                                    <dd>{$order.shipping_time}</dd>
                                    <dt>{$lang.label_invoice_no}
                                    {if !$order.child_order && $order.shipping_id > 0 && $order.invoice_no eq ''}<a href="order.php?act=edit&order_id={$order.order_id}&step=shipping"><i class="icon icon-edit"></i></a>{/if}
                                    </dt>
                                    <dd>
                                    {if $order.shipping_id > 0 && $order.shipping_status > 0}
                                    {if $order.invoice_no}
                                    	<div class="editSpanInput" ectype="editSpanInput">
                                            <span onclick="listTable.edit(this, 'edit_invoice_no', {$order.order_id})" id="invoice_no">{$order.invoice_no}</span>
                                            <i class="icon icon-edit"></i>
                                        </div>
                                    {else}
                                    	{$lang.wu}
                                    {/if}
                                    {else}
                                    {$lang.op_unship}
                                    {/if}
                                    </dd>
                                </dl>
                                <dl>
                                    <dt>{$lang.auto_delivery_time}</dt>
                                    <dd>
                                    	<div class="editSpanInput" ectype="editSpanInput">
                                            <span onclick="listTable.edit(this, 'edit_auto_delivery_time', {$order.order_id})">{$order.auto_delivery_time}</span>
                                            <span>{$lang.dateType[0]}</span>
                                            <i class="icon icon-edit"></i>
                                        </div>
                                    </dd>
                                    {if $order.is_stages}
                                    <dt>{$lang.total_stage}：{$order.stages_total}&nbsp;{$lang.stage}</dt>
                                    <dd>{$lang.by_stage}：{$order.stages_one_price}{$lang.yuan_stage}</dd>
                                    {else}
                                    <dt>&nbsp;</dt>
                                    <dd>&nbsp;</dd>
                                    {/if}
                                </dl>
                            </div>
                        </div>

                        <!--推荐人信息-->
                        {if $order.parent_id > 0 && $order.parent_id != $order.user_id && $order.parent}
                        <div class="step">
                            <div class="step_title"><i class="ui-step"></i><h3>{$lang.parent_info}</h3></div>
                            <div class="section">
                                <dl>
                                    <dt>{$lang.parent_user}：</dt>
                                    <dd class="font14"><a href="users.php?act=edit&id={$order.parent_id}"/>{$order.parent.user_name}</a></dd>
                                </dl>
                                <dl style="width:83%">
                                    <dt>{$lang.parent_time}：</dt>
                                    <dd>{$order.parent.reg_time_format}</dd>
                                </dl>
                            </div>
                        </div>
                        {/if}

                        <!--收货人信息-->
                        <div class="step label_address">
                            <div class="step_title"><i class="ui-step"></i><h3>{$lang.consignee_info}{if !$order.child_order}<a href="order.php?act=edit&order_id={$order.order_id}&step=consignee"><i class="icon icon-edit"></i></a>{/if}</h3></div>
                            <div class="section">
                                <dl>
                                    <dt>{$lang.label_consignee}</dt>
                                    <dd>{$order.consignee|escape}</dd>
                                    <dt>{$lang.label_email}</dt>
                                    <dd>{if $order.email}{$order.email}{else}{$lang.wu}{/if}</dd>
                                </dl>
                                <dl>
                                	<dt>{$lang.label_mobile}</dt>
                                    <dd>{if $order.mobile}{$order.mobile|escape}{else}{$lang.wu}{/if}</dd>
                                    <dt>{$lang.label_tel}</dt>
                                    <dd>{if $order.tel}{$order.tel}{else}{$lang.wu}{/if}</dd>
                                </dl>
                                <dl>
                                    <dt>{$lang.label_best_time}</dt>
                                    <dd>{if $order.best_time}{$order.best_time|escape}{else}{$lang.wu}{/if}</dd>
                                    <dt>{$lang.label_sign_building}</dt>
                                    <dd>{if $order.sign_building}{$order.sign_building|escape}{else}{$lang.wu}{/if}</dd>
                                </dl>
                                <dl>
                                    <dt>{$lang.label_zipcode}</dt>
                                    <dd>{if $order.zipcode}{$order.zipcode|escape}{else}{$lang.wu}{/if}</dd>
                                    <dt>{$lang.label_address}</dt>
                                    <dd>[{$order.region}] {$order.address|escape}</dd>
                                </dl>
                                {if $cross_border_version}
                                <dl style="width:33%">
                                    <dt>{$lang.real_name}：</dt>
                                    <dd>{if $order.rel_name}{$order.rel_name|escape}{else}{$lang.wu}{/if}</dd>
                                    <dt>{$lang.id_card}：</dt>
                                    <dd>{if $order.id_num}{$order.id_num|escape}{else}{$lang.wu}{/if}</dd>
                                </dl>
                                {/if}
                            </div>
                        </div>
                        <!-- 门店信息 -->
                        {if $offline_store}
                        <div class="step">
                            <div class="step_title"><i class="ui-step"></i><h3>{$lang.stores_info}</h3></div>
                            <div class="section">
                                <dl>
                                    <dt>{$lang.stores_name}</dt>
                                    <dd>{$offline_store.stores_name|escape}</dd>
                                    <dt>{$lang.stores_tel}</dt>
                                    <dd>{$offline_store.stores_tel}</dd>
                                </dl>
                                <dl>
                                    <dt>{$lang.stores_address}</dt>
                                    <dd>{$offline_store.province}&nbsp;{$offline_store.city}&nbsp;{$offline_store.district}&nbsp;{$offline_store.stores_address}</dd>
                                    <dt>{$lang.stores_opening_hours}</dt>
                                    <dd>{$offline_store.stores_opening_hours}</dd>
                                </dl>
                                <dl>
                                    <dt>{$lang.stores_traffic_line}</dt>
                                    <dd>{$offline_store.stores_traffic_line|escape}</dd>
                                    <dt>{$lang.stores_img}</dt>
                                    <dd>{if $offline_store.stores_img}<a href="{$offline_store.stores_img}" class="nyroModal"><i class="icon icon-picture" data-tooltipimg="{$offline_store.stores_img}" ectype="tooltip" title="tooltip"></i></a>{/if}</dd>
                                </dl>
                                <dl style="width:50%">
                                    <dt>{$lang.tpnd_time}:</dt>
                                    <dd>{$offline_store.take_time}</dd>
                                    <dt>{$lang.pick_code}</dt>
                                    <dd>{$offline_store.pick_code}</dd>
                                </dl>
                            </div>
                        </div>
                        {/if}
                        <!--订单其他信息-->
                        <div class="step">
                            <div class="step_title"><i class="ui-step"></i><h3>{$lang.other_info}{if !$order.child_order}<a href="order.php?act=edit&order_id={$order.order_id}&step=other"><i class="icon icon-edit"></i></a>{/if}</h3></div>
                            <div class="section">
                                <dl>
									{if $order.invoice_type eq 0}
                                    <dt>{$lang.label_inv_payee}({if $order.invoice_id eq 0}{$lang.personal_general_invoice}{else}{$lang.enterprise_general_invoice}{/if})</dt>
                                    <dd>{if $order.extension_code neq 'exchange_goods'}{$order.inv_payee}{else}{$lang.wu}{/if}</dd>
                                    <dt>{$lang.label_inv_content}</dt>
                                    <dd>{if $order.extension_code neq 'exchange_goods'}{$order.inv_content}{else}{$lang.wu}{/if}</dd>
									{elseif $order.invoice_type == 1}
									<dt>{$lang.label_inv_payee}({$lang.VAT_invoice})</dt>
                                    <dd>{$vat_info.company_name}<a href="javascript:;" ectype="orderDialog" data-dialog="vat">{$lang.view}</a></dd>
									<dt>{$lang.adopt_status}</dt>
                                    <dd>{if $vat_info.audit_status eq 0}{$lang.not_audited}{elseif $vat_info.audit_status eq 1}{$lang.audited_adopt}{elseif $vat_info.audit_status eq 2}{$lang.audited_not_adopt}{/if}</dd>
									{/if}
                                </dl>
                                <dl>
                                    <dt>{$lang.label_how_oos}</dt>
                                    <dd>{if $order.how_oos}{$order.how_oos}{else}{$lang.wu}{/if}</dd>
                                    <dt>{$lang.id_code}：</dt>
                                    <dd>{if $order.invoice_type eq 0}{$order.tax_id|default:$lang.wu}{elseif $order.invoice_type == 1}{$vat_info.tax_id|default:$lang.wu}{/if}</dd>
                                </dl>

                                <dl>
                                    <dt>{$lang.seller_message}：</dt>
                                    <dd>{if $order.to_buyer}{$order.to_buyer}{else}{$lang.wu}{/if}</dd>
                                    <dt>{$lang.buyer_message}：</dt>
                                    <dd>{if $order.postscript}{$order.postscript}{else}{$lang.wu}{/if}</dd>
                                </dl>

                                <dl>
                                    <dt>{$lang.invoice_type}：</dt>
                                    {if $order.invoice_type eq 0}
                                        <dd>
                                            {if $order.invoice_id eq 0}
                                                {$lang.personal_general_invoice}
                                            {else}
                                                {$lang.enterprise_general_invoice}
                                            {/if}
                                        </dd>
                                    {elseif $order.invoice_type == 1}
                                        <dd>{$lang.VAT_invoice}</dd>
                                    {/if}
                                    <dt>{$lang.consignee_name}：</dt>
                                    <dd>
                                        {if isset($vat_invoices_info.consignee_name) }
                                            {$vat_invoices_info.consignee_name}
                                        {/if}
                                    </dd>
                                </dl>

                                <dl>
                                    <dt>{$lang.consignee_mobile_phone}：</dt>
                                    <dd>
                                        {if isset($vat_invoices_info.consignee_mobile_phone) }
                                            {$vat_invoices_info.consignee_mobile_phone}
                                        {/if}
                                    </dd>
                                    <dt>{$lang.consignee_address}：</dt>
                                    <dd>
                                        {if isset($vat_invoices_info.consignee_address) }
                                            {$vat_invoices_info.consignee_address}
                                        {/if}
                                    </dd>
                                </dl>
                            </div>
                        </div>

                        <!--商品信息-->
                        {if $order.is_zc_order eq 1}
                        <div class="step">
                            <div class="step_title"><i class="ui-step"></i><h3>{$lang.zc_goods_info}</h3></div>
                            <div class="step_info">
                                <div class="order_goods_fr">
                                    <table class="table" border="0" cellpadding="0" cellspacing="0">
                                        <thead>
                                            <tr>
                                                <th width="20%" class="first">{$lang.zc_project_name}</th>
                                                <th width="8%">{$lang.start_time}</th>
                                                <th width="7%">{$lang.end_time}</th>
                                                <th width="7%">{$lang.zc_project_raise_money}</th>
                                                <th width="7%">{$lang.zc_goods_price}</th>
                                                <th width="5%">{$lang.zc_shipping_fee}</th>
                                                <th width="6%">{$lang.zc_return_time}</th>
                                                <th width="25%">{$lang.zc_return_content}</th>
                                                <th width="5%">{$lang.subtotal}</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr>
                                                <td align="center"><a href="__ROOT__crowdfunding.php?act=detail&id={$zc_goods_info.pid}" target="_blank">{$zc_goods_info.title}</a></td>
                                                <td align="center">{$zc_goods_info.start_time}</td>
                                                <td align="center">{$zc_goods_info.end_time}</td>
                                                <td align="center">{$zc_goods_info.formated_amount}</td>
                                                <td align="center">{$zc_goods_info.formated_price}</td>
                                                <td align="center">{$zc_goods_info.formated_shipping_fee}</td>
                                                <td align="center">{$zc_goods_info.return_time}</td>
                                                <td align="center" style="padding:10px;">{$zc_goods_info.content}</td>
                                                <td align="center">{$zc_goods_info.formated_price}</td>
                                            </tr>
                                            <tr>
                                                <td></td>
                                                <td></td>
                                                <td></td>
                                                <td></td>
                                                <td></td>
                                                <td></td>
                                                <td></td>
                                                <td align="right"><strong>{$lang.label_total}</strong></td>
                                                <td align="center">{$order.formated_goods_amount}</td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                        {else}
                        <div class="step">
                            <div class="step_title"><i class="ui-step"></i><h3>{$lang.goods_info}<!--{if !$order.child_order}<a href="order.php?act=edit&order_id={$order.order_id}&step=goods"><i class="icon icon-edit"></i></a>{/if}--></h3></div>
                            <div class="step_info">
                                <div class="order_goods_fr">
                                    <table class="table" border="0" cellpadding="0" cellspacing="0">
                                        <thead>
                                            <tr>
                                                <th width="25%" class="first">{$lang.goods_name_brand}</th>
                                                <th width="8%">{$lang.warehouse_name}</th>
                                                <th width="7%">{$lang.goods_sn}</th>
                                                <th width="7%">{$lang.bar_code}</th>
                                                <th width="7%">{$lang.product_sn}</th>
                                                <th width="6%">{$lang.goods_price}</th>
												<th width="5%">{$lang.give_integral}</th>
                                                <th width="5%">{$lang.goods_number}</th>
                                                <th width="8%">{$lang.goods_attr}</th>
                                                <th width="5%">{$lang.storage}</th>
                                                <th width="8%">{$lang.subtotal}</th>
												<th width="7%">{$lang.handler}</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            {foreach from=$goods_list item=goods}
                                            <tr>
                                                <td>
                                                    <div class="order_goods_div">
                                                        <div class="img">
															{if $order.extension_code eq "presale"}
															<a href="__ROOT__presale.php?act=view&id={$goods.act_id}" target="_blank"><img src="{$goods.goods_thumb}" width="72" height="72" /></a>
															{elseif $order.extension_code eq "group_buy"}
															<a href="__ROOT__group_buy.php?act=view&id={$goods.extension_id}" target="_blank"><img src="{$goods.goods_thumb}" width="72" height="72" /></a>
															{elseif $order.extension_code eq "snatch"}
															<a href="__ROOT__snatch.php?act=view&id={$goods.extension_id}" target="_blank"><img src="{$goods.goods_thumb}" width="72" height="72" /></a>
															{elseif $order.extension_code eq "seckill"}
															<a href="__ROOT__seckill.php?act=view&id={$goods.extension_id}" target="_blank"><img src="{$goods.goods_thumb}" width="72" height="72" /></a>
															{elseif $order.extension_code eq "auction"}
															<a href="__ROOT__auction.php?act=view&id={$goods.extension_id}" target="_blank"><img src="{$goods.goods_thumb}" width="72" height="72" /></a>
															{elseif $order.extension_code eq "exchange_goods"}
															<a href="__ROOT__exchange_goods.php?act=view&id={$goods.extension_id}" target="_blank"><img src="{$goods.goods_thumb}" width="72" height="72" /></a>
															{elseif $order.extension_code eq "presale"}
															<a href="__ROOT__presale.php?act=view&id={$goods.extension_id}" target="_blank"><img src="{$goods.goods_thumb}" width="72" height="72" /></a>
															{elseif $goods.extension_code eq "package_buy"}
															<a href="__ROOT__package.php" target="_blank"><img src="{$goods.goods_thumb}" width="72" height="72" /></a>
															{else}
															<a href="__ROOT__goods.php?id={$goods.goods_id}" target="_blank"><img src="{$goods.goods_thumb}" width="72" height="72" /></a>
															{/if}
														</div>
                                                        <div class="name ml10">
                                                            {if $goods.goods_id gt 0 && $goods.extension_code neq 'package_buy'}
																{if $order.extension_code eq "presale"}
																<a href="__ROOT__presale.php?act=view&id={$goods.act_id}" target="_blank">{$goods.goods_name}</a>
																{elseif $order.extension_code eq "group_buy"}
																<a href="__ROOT__group_buy.php?act=view&id={$goods.extension_id}" target="_blank">{$goods.goods_name}</a>
																{elseif $order.extension_code eq "snatch"}
																<a href="__ROOT__snatch.php?id={$goods.extension_id}" target="_blank">{$goods.goods_name}</a>
																{elseif $order.extension_code eq "seckill"}
																<a href="__ROOT__seckill.php?id={$goods.extension_id}&act=view" target="_blank">{$goods.goods_name}</a>
																{elseif $order.extension_code eq "auction"}
																<a href="__ROOT__auction.php?id={$goods.extension_id}&act=view" target="_blank">{$goods.goods_name}</a>
																{elseif $order.extension_code eq "exchange_goods"}
																<a href="__ROOT__exchange.php?id={$goods.extension_id}&act=view" target="_blank">{$goods.goods_name}</a>
																{elseif $order.extension_code eq "presale"}
																<a href="__ROOT__presale.php?id={$goods.extension_id}&act=view" target="_blank">{$goods.goods_name}</a>
																{else}
																<a href="__ROOT__goods.php?id={$goods.goods_id}" target="_blank">{$goods.goods_name} {if $goods.brand_name}[ {$goods.brand_name} ]{/if}
																{/if}
															{if $goods.is_gift}{if $goods.goods_price > 0}{$lang.remark_favourable}{else}{$lang.remark_gift}{/if}{/if}
                                                            {if $goods.parent_id > 0}{$lang.remark_fittings}{/if}</a>
                                                            {elseif $goods.goods_id gt 0 && $goods.extension_code eq 'package_buy'}
                                                            <a href="javascript:void(0)" onclick="setSuitShow({$goods.goods_id})">{$goods.goods_name}<span class="red">{$lang.remark_package}</span></a>
                                                            <div id="suit_{$goods.goods_id}" class="package_goods">
                                                                <div class="tit">{$lang.contain_content}：</div>
                                                                <ul>
                                                                {foreach from=$goods.package_goods_list item=package_goods_list}
                                                                <li><a href="__ROOT__goods.php?id={$package_goods_list.goods_id}" target="_blank" title="{$package_goods_list.goods_name}">{$package_goods_list.goods_name}</a></li>
                                                                {/foreach}
                                                                </ul>
                                                            </div>
