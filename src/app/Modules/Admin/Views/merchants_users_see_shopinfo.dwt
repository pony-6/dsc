<!doctype html>
<html>
<head>
{include file ='library/admin_html_head.lbi'}

<style>

.item_left, .item_right {width:50%;float:left;}
.mt8 {margin-top: 8px;}

.add_sub_dialog {
    /*position: absolute;*/
    margin:0 auto;
    width: 360px;
    text-align: left;
    background-color: #fff;
    padding: 20px;
    border-radius: 10px;
    box-shadow: 0 0 10px #ccc;
    overflow: hidden;
}

.dialog_item { width: 100%; height: 30px; line-height: 30px; float: left; margin-bottom: 10px;}
.dialog_item .label {width: 30%;height: 30px; line-height: 30px; float: left;text-align: right;padding-right: 8px;color: #333}
.dialog_item .label_value { width: 68%;float: left;}




/* 查看店铺信息 start */

/* 店铺基本信息 start */
.basic_info {
    background-color: #fff;
}
.store_warp .title {
    font-size: 16px;
    font-weight: 700;
    border: none;
    color: #333;
}
.basic_info_main {
    display: flex;
    padding: 0 28px;
}
.basic_info_main .store_logo {
    width: 100px;
    height: 100px;
    background-color: #eee;
}
.basic_info_main .store_logo img {
    width: 100px;
    height: 100px;
}
.basic_info_main .info_content {
    flex: 1;
    margin-left: 50px;
    padding-bottom: 20px;
}
.basic_info_main .info_items {
    display: flex;
    flex-wrap: wrap;
}
.basic_info_main .info_item {
    display: flex;
    width: 50%;
    height: 35px;
}
.basic_info_main .info_label {
    min-width: 80px;
    text-align: right;
    color: #666;
}
.basic_info_main .info_item:nth-child(even) .info_label {
    min-width: 115px;
}
.basic_info_main .info_value {
    flex: 1;
    margin-left: 30px;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
    color: #000;
}
.basic_info_main .info_value img {
    vertical-align: middle;
}
.nav_btns {
    display: flex;
    flex-wrap: wrap;
    width: 940px;
}
.nav_btns li {
    margin: 6px 15px 0 0;
}
.nav_btns li:nth-child(n + 8) {
    margin-top: 20px;
}
.nav_btns li a {
    display: block;
    min-width: 110px;
    height: 26px;
    padding: 0 3px;
    text-align: center;
    line-height: 26px;
    border-radius: 3px;
    font-size: 13px;
    color: #1B8BFF;
    border: 1px solid #1B8BFF;
    background-color: #ECF5FF;
}
/* 店铺基本信息 end */

/* 店铺资金 start */
.store_money {
    background-color: #fff;
    margin-top: 20px;
}
.store_money_content {
    display: flex;
    padding: 0 0 20px 28px;
}
.store_money_content li {
    flex: 1;
    display: flex;
    justify-content: center;
    padding: 20px 0;
}
.store_money_content li:nth-child(n + 2) {
    border-left: 1px solid #E7EAF0;
}
.store_money_content .store_count_item {
    display: flex;
    flex-direction: column;
}
.store_money_content .store_count_title {
    display: flex;
    align-items: center;
    margin-bottom: 10px;
    font-size: 15px;
    color: #666;
}
.store_money_content li span {
    font-size: 18px;
    color: #333;
}
.store_money_content .store_tips {
    position: relative;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    width: 16px;
    height: 16px;
    border-radius: 50%;
    background-color: #E7EAF0;
}
.store_money_content .store_tips_ico {
    flex: 1;
    color: #fff;
}
.store_money_content .store_tips_text {
    display: none;
    position: absolute;
    top: 20px;
    left: 50%;
    padding: 0 5px;
    transform: translateX(-50%);
    white-space: nowrap;
    font-size: 12px;
    color: #fff;
    background-color: #9A9A9A;
}
.store_money_content .store_tips:hover .store_tips_text {
    display: block;
}
/* 店铺资金 end */

/* 二级商户号 start */
.sub_merchant {
    background-color: #fff;
    margin-top: 20px;
}
.sub_merchant_content {
    padding: 0 28px;
}
.store_warp table {
    width: 100%;
}
.store_warp tr {
    display: flex;
}
.store_warp thead {
    border-top: 2px solid #DBDBDB;
    background-color: #F2F2F2;
}
.store_warp tbody tr:hover {
    background-color: #F5FAFF;
}
.store_warp th,
.store_warp td {
    flex: 1;
    height: 34px;
    line-height: 34px;
    text-align: center;
    font-weight: 700;
    color: #000;
}
.store_warp td {
    height: 60px;
    line-height: 60px;
    font-weight: 400;
}
.store_warp .no_data {
    height: 60px;
    line-height: 60px;
    text-align: center;
}
/* 二级商户号 end */

/* 资金明细 start */
.money_details {
    margin: 20px 0;
    background-color: #fff;
}
.money_details_content {
    padding: 0 28px;
}
.money_details .cause_change {
    display: flex;
    flex-direction: column;
    justify-content: center;
    height: 100%;
}
.money_details .cause_change span {
    line-height: 1.5;
}
.store_warp .color_blue {
    color: #0000FF;
}
.store_warp .color_gray {
    color: #707070;
}
.store_warp .color_red {
    color: #FF0000;
}
/* 资金明细 end */

/* 查看店铺信息 end */


</style>

</head>
<body class="iframe_body">
	<div class="warpper">
