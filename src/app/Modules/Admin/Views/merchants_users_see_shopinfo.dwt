                            <div class="store_count_item">
                                <div class="store_count_title">{$lang.merchants_no_settlement}<div class="store_tips"><i class="store_tips_ico">?</i><p class="store_tips_text">{$lang.merchants_no_settlement_notice}</p></div></div>
