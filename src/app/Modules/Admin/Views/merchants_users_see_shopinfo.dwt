                                    <td>{$detail.change_time}</td>
                                    <td>
                                        <span class="cause_change">{$detail.change_desc}</span>
                                    </td>
                                    
                                    {if $detail.user_money gt 0}
                                        <td class="color_blue">+{$detail.user_money}</td>
                                    {elseif $detail.user_money lt 0}
